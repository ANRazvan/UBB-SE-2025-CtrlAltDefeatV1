<Window x:Class="SocialStuff.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:SocialStuff.Views"
        xmlns:localViewModel="using:SocialStuff.ViewModels"
        xmlns:model="using:SocialStuff.Model"
        Title="SocialStuff">

    <Grid>
        <!-- Define Two Columns: Left Navigation & Right Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <StackPanel Grid.Column="0" Background="#1b1a26" Padding="10">
            <!-- Top Navigation Bar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Padding="10">
                <Button Content="Chat" Click="Chat_Click"/>
                <Button Content="Feed" Click="Feed_Click"/>
                <Button Content="Friends" Click="Friends_Click"/>
                <Button Content="Notifications" Click="Notifications_Click"/>
            </StackPanel>

            <!-- Search Box with FontIcon -->
            <Grid Margin="0,10,0,10">
                <TextBox x:Name="SearchBox" 
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         PlaceholderText="Search chats..."
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         IsSpellCheckEnabled="True"
                         SelectionHighlightColor="Green"
                         Padding="5"
                         Width="260"/>
                <FontIcon Glyph="&#xE71E;" 
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="13, 0, 0, 0">
                <TextBlock Text="Chats" FontSize="24" FontWeight="Bold" />
                <Button Content="+" Click="CreateChat_Click"/>
            </StackPanel>

            <!-- Chat List -->
            <ListView x:Name="ChatList" 
                  ItemsSource="{Binding Chats}" 
                  Width="300"
                  Height="400"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Chat">
                        <TextBlock Text="{Binding chatName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Text="{Binding Content, FallbackValue='You have no chats, lonely loser!!'}" Foreground="#919191" FontSize="12" Margin="10" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Main Content Area (Where Chat List or Other Views will be loaded) -->
        <Frame x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>
