<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SocialStuff.View.ChatListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialStuff.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ChatListView">

    <Grid>
        <!-- Define Two Columns: Left Navigation & Right Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- Right Dynamic Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#39374f" Height="50" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="White" Text="Group Name"/>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Margin="0,0,10,0" Content="Add a new member"></Button>
                        <Button Grid.Column="1" Content="Leave Chat"></Button>
                    </Grid>

                </Grid>
            </Border>

            <Border Grid.Row="1" Background="Black">
                
            </Border>

            <Border Grid.Row="2" Background="#39374f" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Width="42" Height="40" Margin="10,0"
                        VerticalAlignment="Center" Grid.Column="0">
                        <Image Source="https://img.icons8.com/m_outlined/512/FFFFFF/plus.png" Width="20" Height="20" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <TextBox 
                        AutomationProperties.Name="multi-line TextBox"
                        TextWrapping="Wrap" 
                        AcceptsReturn="True" 
                        IsSpellCheckEnabled="True"
                        SelectionHighlightColor="Green" 
                        MinWidth="400"
                        VerticalAlignment="Center"
                        Height="Auto"
                        PlaceholderText="Type a message"
                        Grid.Column="1"/>   

                    <DropDownButton Grid.Column="2" Margin="10,0">
                        <DropDownButton.Content>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10C;" />
                        </DropDownButton.Content>
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Transfer"/>
                                <MenuFlyoutItem Text="Request"/>
                                <MenuFlyoutItem Text="Split The Bill"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>